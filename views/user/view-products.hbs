<section>
    <div class="container mt-5">
        <!-- Search Bar -->
        <div class="search-bar mb-4">
            <input type="text" id="search-input" class="form-control" placeholder="Search for products..." onkeyup="searchProducts()">
        </div>

        <!-- Mobile Category -->
        <h2 class="category-title">Điện Thoại</h2>
        <div class="row" id="mobile-products">
            {{#each products}}
            {{#if (eq this.Category 'Mobile')}}
