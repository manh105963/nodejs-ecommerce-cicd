                    <div class="card-body text-center">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text font-weight-bold text-primary">${{this.Price}}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-outline-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>

        <!-- Repeat the same for other categories -->
