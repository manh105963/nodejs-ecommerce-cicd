<section>
  <div class="container mt-5">
    <a href="/admin" class="btn btn-link back-button">
      <i class="fas fa-arrow-left"></i> Back
    </a>
    <h2 class="text-center">All Orders</h2>
    <table class="table table-striped table-bordered">
      <thead style="background-color: green; color:#c8e6c9">
        <tr>
          <th>Date</th>
          <th>Address</th>
          <th>Pincode</th>
          <th>Mobile</th>
          <th>Amount</th>
          <th>Payment Method</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#if orders.length}}
          {{#each orders}}
            <tr>
              <td>{{formatDate this.date}}</td>
              <td>{{this.deliveryDetails.address}}</td>
              <td>{{this.deliveryDetails.pincode}}</td>
              <td>{{this.deliveryDetails.mobile}}</td>
              <td>â‚¹{{this.totalAmount}}</td>
              <td>{{this.paymentMethod}}</td>
              <td>{{this.status}}</td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="7" class="text-center">No orders found.</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</section>


